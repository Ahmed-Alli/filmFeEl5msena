<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PrivacyPolicy">

    <TextView

        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="سياسة  الخصوصيه"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:id="@+id/privacyPolicyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacyPolicy"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/t1ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إعدادات الإعلانات."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/t2ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تعطيل عرض إعلانات الأطراف الثالثة"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/t3ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="موردي أو شبكات إعلانات الأطراف الثالثة"
                android:textColor="@color/black" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سياسة الخصوصيه" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>